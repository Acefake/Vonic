{
  "name": "vonic",
  "version": "1.0.0",
  "description": "Vonic - Electron + Vue 3 桌面应用开发框架",
  "author": "hua wang",
  "homepage": "",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "chcp 65001 >nul && electron-vite preview",
    "dev": "chcp 65001 >nul && electron-vite dev --watch",
    "build": "electron-vite build",
    "build:win": "pnpm build && electron-builder --win --config electron-builder.yml",
    "build:mac": "pnpm build && electron-builder --mac --config electron-builder.yml",
    "build:linux": "pnpm build && electron-builder --linux --config electron-builder.yml",
    "build:all": "pnpm build && electron-builder -mwl --config electron-builder.yml",
    "build:dir": "pnpm build && electron-builder --dir --config electron-builder.yml",
    "build:analyze": "electron-vite build --mode analyze",
    "postinstall": "electron-builder install-app-deps",
    "release": "pnpm build && electron-builder --publish always --config electron-builder.yml",
    "create-plugin": "node scripts/create-plugin.js",
    "build-plugin": "node scripts/build-plugin.js"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/lodash": "^4.17.20",
    "ant-design-vue": "~4.2.6",
    "axios": "^1.13.1",
    "echarts": "^6.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9",
    "event-bus-common": "^1.2.1",
    "json5": "^2.2.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "sucrase": "^3.35.1",
    "unzipper": "^0.12.3",
    "vue-echarts": "^8.0.1",
    "vue-router": "^4.6.3",
    "vue3-sfc-loader": "^0.9.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.18.6",
    "@types/unzipper": "^0.10.11",
    "@unocss/preset-attributify": "66.5.10-beta.1",
    "@unocss/preset-uno": "66.5.10-beta.1",
    "@unocss/transformer-directives": "66.5.10-beta.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.2",
    "eslint-plugin-vue": "^10.4.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "unocss": "66.5.10-beta.1",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^8.0.0",
    "vue": "^3.5.21",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
