{
  "name": "vonic-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Vonic - Electron + Vue 3 桌面应用开发框架 (Monorepo)",
  "author": "hua wang",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo run dev --filter=@vonic/electron",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/**'",
    "build:core": "turbo run build --filter='./packages/core/**'",
    "build:win": "turbo run build:win --filter=@vonic/electron",
    "build:mac": "turbo run build:mac --filter=@vonic/electron",
    "build:linux": "turbo run build:linux --filter=@vonic/electron",
    "build:all": "pnpm --filter @vonic/electron build:all",
    "lint": "turbo run lint",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "typecheck": "turbo run typecheck",
    "create-plugin": "pnpm --filter @vonic/cli create",
    "build-plugin": "node packages/cli/bin/vonic.js build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@typescript/native-preview": "7.0.0-dev.20251205.1",
    "eslint": "^9.36.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.3.3",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ],
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "8"
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
