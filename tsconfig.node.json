{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["src/shared/*"],
      "@/main/*": ["src/main/*"],
      "@/renderer/*": ["src/renderer/src/*"],
      "@/config/*": ["src/config/*"]
    },
    "types": ["electron-vite/node"]
  },
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/shared/**/*", "src/config/**/*", "src/env.d.ts"]
}
